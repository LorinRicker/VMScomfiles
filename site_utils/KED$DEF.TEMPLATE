$PROMPT RAPT template <field>

$RULER
L2T4T6T89 T2345T789 123T56789 1T3456789 T23456789 T23456789 T23456789 T23456789
$ENDRULER

$TPUINI
  P$WordDelims( GV$_word, "	
 _$.,(=" );
  GV$_autotab := TRUE;
$ENDTPUINI

$TEMPLATE field
$0 field name := «»
$1 position   := «»
$2 datatype   := VARCHAR:«»
$3 size       := 10
$4 attributes := «»
$5 tip        := «»
$BEGIN
FIELD $0$* /POS=($1) /DATATYPE=$2 /SIZE=$3 -
  /ATTR=($4) -
  /TIP="$5"
$END

$TEMPLATE callback
$0 after/before/init := AFTER
$1 function name := «»
$BEGIN
/CALLBACK=($0=($1$*))
$END$

$TEMPLATE database
$0 database name := «»
$1 type          := RDB
$2 access        := RW
$BEGIN
DATABASE $0$* /TYPE=$1 /ACCESS=$2
$END

$TEMPLATE background
$0 text     := «»
$1 position := «»
$BEGIN
BACKGROUND "$0$*" /POS=($1)
$END

$TEMPLATE GUIbackground
$0 text     := «»
$1 position := «»
$BEGIN
BACKGROUND "$0$*" /POS=($1) /GUI
$END

$TEMPLATE table
$0 table name := «»
$1 access     := RW
$BEGIN
TABLE $0$* /ACCESS=$1
$END

$TEMPLATE screen
$0 screen size := 19,78
$1 position    := 2,2
$2 border text := «»
$3 status text := Lock&Track © $YEAR LockWorks LLC.
$BEGIN
OPTIONS /KEYBOARD=PC
SCREEN $FN0 /SIZE=($0) /POSITION=($1) /BORDER=" $2 " -
  /STATUS=TEXT="$3" -
  /LEGEND=(SHOW=(PGUP,PGDN,F9,F10,F11,F12),-
     PGUP="GoBack",-
     PGDN="«»",-
     F9="«»",-
     F12="«»" ) -
  /NAV=(PGDN=«», F9=«», F12=«» )

$*
EOSCREEN $FN0

$@ KED$LSE_Replace("$FN0",KED$FileName)
$@ KED$UserYear("$YEAR");
$END

