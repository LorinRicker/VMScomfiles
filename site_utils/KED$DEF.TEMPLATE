$TEMPLATE export
$0 name := «»
$BEGIN
$*/EXPORT=$0 /IMPORT=$0
$END$

$TEMPLATE import
$0 name := «»
$BEGIN
$*/IMPORT=$0
$END$

$TEMPLATE validate
$BEGIN
/VALIDATE=($*)
$END$

$TEMPLATE value
$BEGIN
/VALUE=($*)
$END$

$TEMPLATE default
$0 default value := «»
$BEGIN
DEFAULT="$0"$*
$END$

$TEMPLATE in
$TEMPLATE popup
$0 validation list := «»
$BEGIN
IN=$0$*,POPUP
$END$

$TEMPLATE list
$0 validation list := «»
$BEGIN
LIST=$0$*,POPUP
$END$

$TEMPLATE template
$0 template := 999
$BEGIN
TEMPLATE="$0$*"
$END$

$TEMPLATE DateTime
$0 date template := 99/99/9999 99:99
$1 date format   := !MN0/!D0/!Y4|!H04:!M0:!S0.!C2
$BEGIN
TEMPLATE="|$0$*|$1|"
$END$

$TEMPLATE DateOnly
$0 date template := 99/99/9999
$1 date format   := !MN0/!D0/!Y4
$BEGIN
TEMPLATE="|$0$*|$1|"
$END$

$TEMPLATE TimeOnly
$0 time template := 99:99:99
$1 time format   := !H04:!M0:!S0.!C2
$BEGIN
TEMPLATE="|$0$*|$1|"
$END$

$TEMPLATE keystroke
$0 keystroke := F17
$1 action    := «»
$2 subaction := «»
$BEGIN
KEYSTROKE $0$* /ACTION=$1 /SUBACTION=$2
$END


